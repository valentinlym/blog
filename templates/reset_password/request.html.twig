{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<div class="example__wrapper">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1>Réinitialiser votre mot de passe</h1>

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email, {'attr': {'class': 'champ champ__input'}}) }}
		<div>
			<p>
				Saisisez votre email et nous vous enverons un lien pour réinitialiser votre mot de passe
			</p>
		</div>

		<button style="margin-top:24px;" class="btn btn__primaire">Faire une demande</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
