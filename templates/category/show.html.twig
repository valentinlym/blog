{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<div class="categories">
		<h1>{{ category.label|capitalize }}</h1>
		<p>
			Retrouvez les articles concernant la catégorie "{{ category.label }}" ici.
		</p>

		<div class="categories__container">
			{% for article in category.articles %}
				<a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class="categories__item">
					<div>
						<p>{{ article.title }}</p>
					</div>
					<div>
						<p>{{ article.userId|slice(start, length) }}</p>
					</div>
				</a>
			{% else %}
				<p>Aucun résultat trouvé</p>
			{% endfor %}
		</div>
	</div>
</div>{% endblock %}
